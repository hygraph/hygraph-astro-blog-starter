---
import NavList from "../components/NavList.astro";
import { client } from "../utils/client";
import { SingleNav } from "../../queries/navigations";
import HygraphLogo from '../../public/svg/logo.svg?raw'
import HygraphMark from '../../public/svg/mark.svg?raw'


const { title } = Astro.props.frontmatter || Astro.props;

---

<html lang="en">
  <body>
    <div class="px-6 max-w-3xl mx-auto">
      <header class="py-10 relative">
        <nav class="relative flex items-center justify-between sm:h-10">
          <a href="/" aria-label="Hygraph Astro.js Blog Starter">
            <div class="hidden sm:block h-10" set:html={HygraphLogo}></div>
            <div class="h-10 sm:hidden" set:html={HygraphMark}></div>
          </a>
          <ul>
            <NavList navId="main" />
          </ul>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer class="bg-white mt-5 dark:bg-gray-900">
        <div class="py-6 lg:py-8">
          <div class="md:flex md:justify-between">
            <div class="mb-6 md:mb-0">
              <a href="/" aria-label="Hygraph Next.js Blog Starter"> logo</a>
            </div>
            <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
              <div>
                <h2
                  class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
                >
                  Follow us
                </h2>
                <ul class="text-gray-600 dark:text-gray-400 font-medium">
                  <ul>
                    <NavList navId="social" />
                  </ul>
                </ul>
              </div>
            </div>
          </div>
          <hr
            class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"
          />
          <div class="sm:flex sm:items-center sm:justify-between">
            <span
              class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
            >
              Â© 2023{" "}
              <a href="https://hygraph.com/" class="hover:underline">
                Hygraph
              </a>
              . All Rights Reserved.
            </span>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
